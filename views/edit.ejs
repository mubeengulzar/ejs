<%- include('layout/header') %>


    <div class="container p-5">
        <div class="row">
            
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-success">
                        <h3 class="text-light">Edit User(<%= user.name%>)</h3>

                    </div>
                    <div class="card-body p-4">
                        <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" name="name" value="<%= user.name%>" placeholder="Enter name" class="form-control form-control-lg" required/>
                              </div>
                              <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" name="email" value="<%= user.email%>" placeholder="Enter email" class="form-control form-control-lg" required/>
                              </div>
                              <div class="mb-3">
                                <label for="phone" class="form-label">Phone</label>
                                <input type="tel" name="phone" placeholder="Enter phone" value="<%= user.phone%>" class="form-control form-control-lg" required/>
                              </div>
                              <div class="mb-3">
                                <label for="image" class="form-label">Select Image</label>
                                <input type="file" name="image"  class="form-control form-control-lg" required/>
                            <img src="/<%= user.image%>" width="100" class="img-thumbnail mt-1"/>
                            <input type="hidden" name="old_image" value="<%=user.image%>" />  
                            </div>
                            <div class="mb-3 d-grid">
                              
                              <input type="submit" name="submit" value="Add User" class="btn btn-success btn-lg" >
                            </div>
                            
                          </form>

                    </div>

                </div>


            </div>

        </div>

    </div>
    
    <%- include('layout/footer') %>